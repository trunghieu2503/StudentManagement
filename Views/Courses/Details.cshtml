@using StudentManagement
@model StudentManagement.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Course Details";
}

<h1 class="text-center my-4">Thông tin chi tiết</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="mb-3">Thông tin lớp học</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.CourseID)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CourseID)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CourseName)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Teacher)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Teacher)
            </dd>
        </dl>
        <div class="form-group d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Trở lại</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
