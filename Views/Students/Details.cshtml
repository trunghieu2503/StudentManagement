@model StudentManagement.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Student Details";
}

<h1 class="text-center my-4">Thông tin chi tiết</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="mb-3">Thông tin sinh viên</h4>
        <hr />

        <dl class="row">
            <!-- Student Image -->
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3 font-weight-bold">
                    <img src="@Model.ImagePath" width="50%" alt="Student Image">
                </dt>
                <dd class="col-sm-9"></dd>
            }

            <!-- Student ID -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.StudentId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StudentId)
            </dd>

            <!-- Student Name -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.StudentName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StudentName)
            </dd>

            <!-- Date of Birth -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DateOfBirth)
            </dd>

            <!-- Gender -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Gender)
            </dd>
        </dl>

        <!-- Action Buttons -->
        <div class="form-group d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Trở lại</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
