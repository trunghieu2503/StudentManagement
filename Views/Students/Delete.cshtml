@model StudentManagement.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Xóa sinh viên</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h3 class="text-danger">Bạn có muốn xóa sinh viên @Html.DisplayFor(model => model.StudentName) không?</h3>

        <div>
            <h4>Thông tin sinh viên</h4>
            <hr />

            <dl class="row">
                @if (!string.IsNullOrEmpty(@Model.ImagePath))
                {
                    <dt class="col-sm-3 font-weight-bold">
                        <img src="@Model.ImagePath" width="50%" alt="Student Image">
                    </dt>
                    <dd class="col-sm-9"></dd>
                }
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.StudentId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StudentId)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.StudentName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StudentName)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Gender)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Xóa" class="btn btn-danger btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Trở lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
